# DIOTEC 360 IA - Production Environment Configuration
# Hugging Face Space Deployment

# Application
DIOTEC360_ENV=production
DIOTEC360_DEBUG=false
DIOTEC360_LOG_LEVEL=INFO

# Paths
DIOTEC360_VAULT_PATH=/app/.diotec360_vault
DIOTEC360_STATE_PATH=/app/.diotec360_state
DIOTEC360_AUDIT_PATH=/app/.diotec360_audit

# API Configuration
DIOTEC360_API_HOST=0.0.0.0
DIOTEC360_API_PORT=7860
DIOTEC360_API_WORKERS=1

# Security
DIOTEC360_ENABLE_CORS=true
DIOTEC360_CORS_ORIGINS=*

# Features
DIOTEC360_ENABLE_MOE=true
DIOTEC360_ENABLE_CONSENSUS=true
DIOTEC360_ENABLE_METRICS=true

# Z3 Configuration
DIOTEC360_Z3_TIMEOUT=30000
DIOTEC360_Z3_MAX_MEMORY=4096

# Performance
DIOTEC360_MAX_CONCURRENT_REQUESTS=100
DIOTEC360_REQUEST_TIMEOUT=60

# Monitoring
DIOTEC360_ENABLE_TELEMETRY=true
DIOTEC360_METRICS_PORT=7861
