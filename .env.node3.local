# Diotec360 Node 3 - Local Simulation
# Simulating Backup Server

# P2P Configuration - DISABLED
DIOTEC360_P2P_ENABLED=false
DIOTEC360_P2P_LISTEN=/ip4/0.0.0.0/tcp/9002
DIOTEC360_P2P_TOPIC=aethel/lattice/v1

# Bootstrap Peers
DIOTEC360_P2P_BOOTSTRAP=

# HTTP Sync Fallback Nodes
DIOTEC360_LATTICE_NODES=http://localhost:8000,http://localhost:8001

# Storage Directories
DIOTEC360_STATE_DIR=.DIOTEC360_state_node3
DIOTEC360_VAULT_DIR=.DIOTEC360_vault_node3
DIOTEC360_SENTINEL_DIR=.DIOTEC360_sentinel_node3

# Heartbeat Configuration
DIOTEC360_HEARTBEAT_INTERVAL=5
DIOTEC360_PEERLESS_TIMEOUT=60
DIOTEC360_HTTP_POLL_INTERVAL=10

# Node Identity
DIOTEC360_NODE_NAME=node3-backup-local
DIOTEC360_NODE_ROLE=genesis-backup

# Production Settings
DIOTEC360_ENVIRONMENT=development
DIOTEC360_LOG_LEVEL=INFO
