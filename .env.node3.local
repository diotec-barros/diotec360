# Aethel Node 3 - Local Simulation
# Simulating Backup Server

# P2P Configuration - DISABLED
AETHEL_P2P_ENABLED=false
AETHEL_P2P_LISTEN=/ip4/0.0.0.0/tcp/9002
AETHEL_P2P_TOPIC=aethel/lattice/v1

# Bootstrap Peers
AETHEL_P2P_BOOTSTRAP=

# HTTP Sync Fallback Nodes
AETHEL_LATTICE_NODES=http://localhost:8000,http://localhost:8001

# Storage Directories
AETHEL_STATE_DIR=.aethel_state_node3
AETHEL_VAULT_DIR=.aethel_vault_node3
AETHEL_SENTINEL_DIR=.aethel_sentinel_node3

# Heartbeat Configuration
AETHEL_HEARTBEAT_INTERVAL=5
AETHEL_PEERLESS_TIMEOUT=60
AETHEL_HTTP_POLL_INTERVAL=10

# Node Identity
AETHEL_NODE_NAME=node3-backup-local
AETHEL_NODE_ROLE=genesis-backup

# Production Settings
AETHEL_ENVIRONMENT=development
AETHEL_LOG_LEVEL=INFO
