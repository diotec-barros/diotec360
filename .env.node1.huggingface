# Aethel Node 1 - Hugging Face Space Configuration
# Production Genesis Node - Public Access Point

# P2P Configuration - DISABLED (HTTP-Only Resilience Mode)
AETHEL_P2P_ENABLED=false
AETHEL_P2P_LISTEN=/ip4/0.0.0.0/tcp/9000
AETHEL_P2P_TOPIC=aethel/lattice/v1

# Bootstrap Peers (Disabled in HTTP-Only mode)
AETHEL_P2P_BOOTSTRAP=

# HTTP Sync Fallback Nodes
AETHEL_LATTICE_NODES=https://aethel.diotec360.com,https://backup.diotec360.com

# Storage Directories
AETHEL_STATE_DIR=.aethel_state
AETHEL_VAULT_DIR=.aethel_vault
AETHEL_SENTINEL_DIR=.aethel_sentinel

# Heartbeat Configuration
AETHEL_HEARTBEAT_INTERVAL=5
AETHEL_PEERLESS_TIMEOUT=60
AETHEL_HTTP_POLL_INTERVAL=10

# Node Identity
AETHEL_NODE_NAME=node1-huggingface
AETHEL_NODE_ROLE=genesis-public
