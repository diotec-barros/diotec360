# Diotec360 Node 1 - Local Simulation
# Simulating Hugging Face Space

# P2P Configuration - DISABLED
DIOTEC360_P2P_ENABLED=false
DIOTEC360_P2P_LISTEN=/ip4/0.0.0.0/tcp/9001
DIOTEC360_P2P_TOPIC=aethel/lattice/v1

# Bootstrap Peers
DIOTEC360_P2P_BOOTSTRAP=

# HTTP Sync Fallback Nodes
DIOTEC360_LATTICE_NODES=http://localhost:8000,http://localhost:8002

# Storage Directories
DIOTEC360_STATE_DIR=.DIOTEC360_state_node1
DIOTEC360_VAULT_DIR=.DIOTEC360_vault_node1
DIOTEC360_SENTINEL_DIR=.DIOTEC360_sentinel_node1

# Heartbeat Configuration
DIOTEC360_HEARTBEAT_INTERVAL=5
DIOTEC360_PEERLESS_TIMEOUT=60
DIOTEC360_HTTP_POLL_INTERVAL=10

# Node Identity
DIOTEC360_NODE_NAME=node1-huggingface-local
DIOTEC360_NODE_ROLE=genesis-cloud

# Production Settings
DIOTEC360_ENVIRONMENT=development
DIOTEC360_LOG_LEVEL=INFO
